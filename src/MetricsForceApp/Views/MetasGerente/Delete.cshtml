@model MetricsForceApp.Models.MetaGerente

@{
    ViewData["Title"] = "Delete";
}

<h1 style="font-size: 25px">@ViewData["Title"]</h1>

<h3>Tem certeza que deseja apagar?</h3>
<div>
    <h4>MetaGerente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gerente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gerente.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InicioMeta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InicioMeta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FimMeta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FimMeta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MetaMes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MetaMes)
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a class="btn btn-info" asp-action="Index">Voltar</a>
    </form>
</div>
