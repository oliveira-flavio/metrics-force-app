@model MetricsForceApp.Models.MetaGerente

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MetaGerente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GerenteId" class="control-label"></label>
                <select asp-for="GerenteId" class="form-control" asp-items="ViewBag.GerenteId"></select>
                <span asp-validation-for="GerenteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InicioMeta" class="control-label"></label>
                <input asp-for="InicioMeta" class="form-control" />
                <span asp-validation-for="InicioMeta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FimMeta" class="control-label"></label>
                <input asp-for="FimMeta" class="form-control" />
                <span asp-validation-for="FimMeta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MetaMes" class="control-label"></label>
                <input asp-for="MetaMes" class="form-control" />
                <span asp-validation-for="MetaMes" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
