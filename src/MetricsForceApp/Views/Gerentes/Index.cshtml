@using MetricsForceApp.Extensions
@model IEnumerable<MetricsForceApp.Models.Gerente>

@{
    ViewData["Title"] = "Lista de gerentes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="font-size: 25px">@ViewData["Title"]</h1>
<p>
    <a class="btn btn-info" suppress-by-claim-name="Gerente"
       suppress-by-claim-value="Create" asp-action="Create">Adicionar</a>
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoFuncionario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CodigoFuncionario)
                </td>,
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td class="text-right">
                    <a class="btn btn-info" suppress-by-claim-name="Gerente" suppress-by-claim-value="Read" asp-action="Details" asp-route-id="@item.Id"><span class="fa fa-search"></span></a>
                    <a class="btn btn-warning" suppress-by-claim-name="Gerente" suppress-by-claim-value="Edit" asp-action="Edit" asp-route-id="@item.Id"><span class="fa fa-edit"></span></a>
                    <a class="btn btn-danger" suppress-by-claim-name="Gerente" suppress-by-claim-value="Delete" asp-action="Delete" asp-route-id="@item.Id"><span class="fa fa-trash"></span></a>
                    @*<a class="btn btn-danger" suppress-by-claim-name="Gerente" suppress-by-claim-value="Excluir"asp-action="Delete" asp-route-id="@item.Id"><span class="fa fa-trash"></span></a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
