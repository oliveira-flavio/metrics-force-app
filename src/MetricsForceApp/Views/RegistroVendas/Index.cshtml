@model IEnumerable<MetricsForceApp.Models.RegistroVenda>

@{
    ViewData["Title"] = "Registro de Vendas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="font-size: 25px">@ViewData["Title"]</h1>

<p>
    <a class="btn btn-info" suppress-by-claim-name="Vendas" 
       suppress-by-claim-value="Create" asp-action="Create">Nova venda</a>
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodigoVendedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantidadeItens)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorVenda)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoVendedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.QuantidadeItens)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.ValorVenda)
            </td>
            <td class="text-right">
                <a class="btn btn-info" suppress-by-claim-name="Vendas" suppress-by-claim-value="Read" asp-action="Details" asp-route-id="@item.Id"><span class="fa fa-search"></span></a>
                <a class="btn btn-warning" suppress-by-claim-name="Vendas" suppress-by-claim-value="Edit" asp-action="Edit" asp-route-id="@item.Id"><span class="fa fa-edit"></span></a>
                <a class="btn btn-danger" suppress-by-claim-name="Vendas" suppress-by-claim-value="Delete" asp-action="Delete" asp-route-id="@item.Id"><span class="fa fa-trash"></span></a>
            </td>
        </tr>
        }
    </tbody>
</table>
