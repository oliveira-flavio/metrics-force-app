@model MetricsForceApp.Models.RegistroVenda

@{
    ViewData["Title"] = "Apagar";
}

<div class="content-wrapper" style="padding-left: 10px">
    <h1 style="font-size: 25px">@ViewData["Title"]</h1>

    <h3>Tem certeza que deseja apagar?</h3>
    <div>
        <h4>RegistroVenda</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.QuantidadeItem)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.QuantidadeItem)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ValorVenda)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ValorVenda)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.QuantidadeTicket)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.QuantidadeTicket)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Data)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Data)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Apagar" class="btn btn-danger" /> |
            <a asp-action="Index">Voltar</a>
        </form>
    </div>
</div>